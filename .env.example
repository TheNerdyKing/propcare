# General
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database (PostgreSQL - Swiss Hosted)
DATABASE_URL="postgresql://user:password@localhost:5432/propcare?schema=public"

# AI Provider (Abstracted)
AI_PROVIDER=openai # or anthropic
AI_API_KEY=your_api_key_here
AI_MODEL_NAME=gpt-4-turbo-preview

# File Storage (S3-compatible - Swiss Hosted)
S3_ENDPOINT=https://sos-ch-dk-2.exo.io # Example Exoscale SOS
S3_REGION=ch-dk-2
S3_BUCKET=propcare-attachments
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key

# Email (SMTP)
SMTP_HOST=mail.infomaniak.com
SMTP_PORT=587
SMTP_USER=user@domain.ch
SMTP_PASS=password
SMTP_FROM="PropCare Support <support@propcare.ch>"

# Google Maps (Fallback)
GOOGLE_MAPS_API_KEY=your_google_maps_key

# Auth
JWT_SECRET=your_jwt_secret
JWT_REFRESH_SECRET=your_jwt_refresh_secret
